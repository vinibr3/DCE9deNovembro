<%= form_for(@estudante, :url => {:action => "update_password"}, :html => { :method => :put, class:'form-horizontal' }) do |f| %>
<div class="modal fade" id="edit-password-modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header bg-primary">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4>Editar Senha</h4>
			</div>
			<div class="modal-body>" style="margin-top: 23px;">
				  <%= f.hidden_field :reset_password_token %>
				  <div class="form-group">
					  <%= f.label :password, "Nova Senha", :class=>'control-label col-sm-4 col-sm-offset-1' %>
							<div class="col-sm-6"><%= f.text_field :password, :class=>'form-control'%></div>
					</div>
					<div class="form-group">
					  <%= f.label :password_confirmation, "Confimação de Senha", :class=>'control-label col-sm-4 col-sm-offset-1' %>
							<div class="col-sm-6"><%= f.text_field :password_confirmation, :class=>'form-control'%></div>
					</div>
			</div>
			<<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
					<%= f.submit 'Salvar', :class=>'btn btn-success'%>
				</div>
		</div>
	</div>
</div>
<% end %>