<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
<h2><%= t('.sign_in', :default => "Sign in") %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-group">
  	<%= f.label :email, :class=>'control-label'%>
  	<%= f.email_field :email, :class=>'form-control', :placeholder=>"Email" %>
	</div>

  <div class="form-group">
  	<%= f.label :password, I18n.t("active_admin.devise.password.title"), :class=>'control-label'%>
  	<%= f.password_field :password , :class=>'form-control', :placeholder=>'Senha'%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
    	<%= f.check_box :remember_me %> 
    	<%= f.label :remember_me, I18n.t("active_admin.devise.login.remember_me")%>
    </div>
  <% end -%>
  <div class="form-group">
  	<%= f.submit t('.sign_in', :default => "Sign in"), :class=>'btn btn-success btn-lg col-sm-12' %>
  </div>
	<% end %>
		<%= render "devise/shared/links" %>
		</div>
	</div>
</div>