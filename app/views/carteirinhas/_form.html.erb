	<%= form_for ([@estudante, @estudante.carteirinhas.build]) do |f| %>
	<div class="col-md-12">
		<div class="col-md-7">
			<%= image_tag(LayoutCarteirinha.anverso.url, :class=>'img img-responsive') if LayoutCarteirinha.anverso%>
		</div>
		<div class="col-md-5">
			<div class="checkbox"><br>
				<% entidade = Entidade.instance%>
				<% valor = entidade.valor_carteirinha %>
				<% frete = entidade.frete_carteirinha %>
				<p><strong>Valor:</strong>&nbsp;R$<%= valor %> </p>
				<% if !frete.blank? %>
					<p><strong>Frete:</strong>&nbsp;R$<%= frete %> </p>
				<%end%>
				<label>
					<%= f.check_box :termos %> 
					<small style="font-size: 12px;"> Aceito os <a class="text-primary" href='#' >termos</a> </small>
				</label>
			</div>
			<div class="input-group" role="group">
				<span class="input-group-addon bg-success"><strong>Total R$</strong></span>
				<%= f.hidden_field :valor, :value=>frete.to_i+valor.to_i %>
				<%= f.label :valor, frete.to_i+valor.to_i, :id=> 'carteirinha_valor', :size=>'4', :class=>'form-control' %>
				<span class="input-group-btn" id="pagar_agora">
					<%= f.submit "Pagar Agora", :class=>'btn btn-success' %>
				</span>
			</div>
		</div>
		<div class="col-md-12" style="margin-top: 10px;">
			<p>Status da solicitação: <small style="float: right"> Código de Rastreio: </small></p>
			<div class="progress">
				<div class="progress-bar" role="progress-bar" style="width:25%; background-color: #f5f5f5;">Aguar. Pagamento</div>
				<div class="progress-bar" role="progress-bar" style="width:25%; background-color: #f5f5f5;">Verif. Documentação </div>
				<div class="progress-bar" role="progress-bar" style="width:25%; background-color: #f5f5f5;"> Enviado </div>
				<div class="progress-bar" role="progress-bar" style="width:25%; background-color: #f5f5f5;"> Entregue </div>
			</div>
		</div>
	</div>
	<%end%>
	